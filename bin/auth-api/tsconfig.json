{
  "extends": "@si/tsconfig/tsconfig.node.json",
  "ts-node": {
    "swc": true,
    // "transpileOnly": true,
    // "transpiler": "ts-node/transpilers/swc",
    "files": true,
    "compilerOptions": {
      "module": "esnext",
      "isolatedModules": false,
    }
  },
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
  ],
}