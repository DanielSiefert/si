load(
    "@prelude-si//:macros.bzl",
    "eslint",
    "export_file",
    "node_pkg_bin",
    "typescript_check",
    "typescript_dist",
    "package_node_modules",
)
load(
    "@prelude-si//:pnpm.bzl",
    "pnpm_task_test",
)

export_file(
    name = "package.json",
)

package_node_modules(
    name = "node_modules",
)

filegroup(
    name = "src",
    srcs = glob([
        "src/**/*.ts",
        "tsconfig.json",
    ]),
)

filegroup(
    name = "test",
    srcs = glob([
        "tests/**/*",
    ]),
)

typescript_dist(
    name = "dist",
    srcs = [":src"],
)

node_pkg_bin(
    name = "lang-js",
    extra_srcs = ["bin-placeholder.js"],
)

eslint(
    name = "check-lint",
    directories = ["src", "tests"],
    srcs = [":src", ":test"] + glob([".eslint*"]),
)

typescript_check(
    name = "check-type",
    srcs = [":src"],
)

