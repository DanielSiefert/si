pnpm_task_test(
    name = "zzz-test",
    command = "test",
    deps = [
        ":dist",
    ],
    path = "bin/lang-js",
    visibility = ["PUBLIC"],
)

pnpm_task_binary(
    name = "generate",
    command = "generate",
    srcs = glob(["*"]),
    path = "bin/lang-js",
    deps = [
        "//:node_modules",
    ],
    visibility = ["PUBLIC"],
)
