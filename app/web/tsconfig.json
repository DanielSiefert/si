{
  "extends": "@si/tsconfig/tsconfig.browser.json",
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "vite/client",
      "vite-svg-loader",
      "unplugin-icons/types/raw",
      "@types/wicg-file-system-access",
    ],
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "cypress.d.ts",
  ]
}
